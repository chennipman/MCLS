class vector
{
public:
  double u1,u2,u3;
  vector(double u1, double u2, double u3);
  vector( void);
};
  void set_pressure_boundary_condition(
       vector gravity,				    // gravitational acceleration vector 
       double ***pressure_boundary_condition_x1,    // inhomogeneous boundary condition for 
						    // the pressure planes with normal in x1 direction
       double ***pressure_boundary_condition_x2,    // inhomogeneous boundary condition for the pressure
						    // the pressure planes with normal in x1 direction
       double ***pressure_boundary_condition_x3,    // inhomogeneous boundary condition for the pressure
						    // the pressure planes with normal in x1 direction
       int number_primary_cells_i,	            // number of primary (pressure) cells in x1 direction
       int number_primary_cells_j,	            // number of primary (pressure) cells in x2 direction
       int number_primary_cells_k	            // number of primary (pressure) cells in x3 direction
 	)
    {
       void set_constant_vector(
	    int vector_length,		// length of the vector
	    double *vector_to_set,	// the name of the vector that has to be set
	    double constant_value	// the constant value the vector has to be set to
	);
       int vector_length_1;            // number of unknowns in i+/i- boundary slices
       int vector_length_2;            // number of unknowns in j+/j- boundary slices
       int vector_length_3;            // number of unknowns in k+/k- boundary slices
       
       vector_length_1=number_primary_cells_j*number_primary_cells_k;
       vector_length_2=number_primary_cells_i*number_primary_cells_k;
       vector_length_3=number_primary_cells_i*number_primary_cells_j;
       
       set_constant_vector(vector_length_1, *pressure_boundary_condition_x1[0], -1.0*gravity.u1);
       set_constant_vector(vector_length_1, *pressure_boundary_condition_x1[1],  1.0*gravity.u1);
       
       set_constant_vector(vector_length_2, *pressure_boundary_condition_x2[0], -1.0*gravity.u2);
       set_constant_vector(vector_length_2, *pressure_boundary_condition_x2[1],  1.0*gravity.u2);
       
       set_constant_vector(vector_length_3, *pressure_boundary_condition_x3[0], -1.0*gravity.u3);
       set_constant_vector(vector_length_3, *pressure_boundary_condition_x3[1],  1.0*gravity.u3);
    }
       
       
       
	